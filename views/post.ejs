<!-- to create new post by the user -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create New Post</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/users.js"></script>
</head>
<%- include('nav') %>

  <body>
    <form method="POST" action="/users/new">
      <label for="createPost"> CREATE POST</label><br>
      <label for="title"> Title</label>
      <input type="text" name="title" placeholder="Title" style="width: 300px;" /><br>

      <label for="topic"> Topic</label>
      <input type="text" name="topic" placeholder="Topic" style="width: 300px;" /><br>

      <label for="url"> Url</label>
      <input type="text" name="url" placeholder="Url" style="width: 300px;" /><br>

      <label for="description"> Description</label>
      <input type="text" name="description" placeholder="Description" style="width: 300px;" /><br>

      <label for="author"> Author</label>
      <input type="text" name="author" placeholder="Author" style="width: 200px;" /><br>

      <button type="submit">Submit</button>
    </form>
  </body>

</html>