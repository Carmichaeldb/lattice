<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/_head') %> <%- include('nav') %>

  <body>
    <div class="container d-flex justify-content-center align-items-center">
      <div class="back-library">
        <button type="button" class="btn btn-secondary library-button" onclick="location.href='/path-to-library'">&lt;</button>
        <h3>Library</h3>
      </div>
    <div class="post-container col-md-10">
      <h2 class="text-center"><%= post.topic %></h2>
      <div class="row">
        <div class="col-md-6 post-main border border-2">
          <h1><%= post.title %></h1>
          <a href="<%= post.url %>"><%= post.url %></a>
          <p><%= post.description %></p>
        </div>
        <div class="col-md-4 post-comments border border-2">
            <div class="d-flex mb-2">
              <div class="me-2">
                <span class="like-heart"><%= likes.total_likes %>&#9829;</span>
              </div>

              <span class="rating-stars">&#x2B50;&#x2B50;&#x2B50;&#x2B50;&#x2B50; <%= parseFloat(rating.average_rating).toFixed(1) %></span>
            </div>
            <p>Author: <%= post.user %></p>
            <div class="comments">
              <div class="card mb-2">
                <form>
                  <div class="mb-3 card-body">
                    <label for="comment" class="form-label">New Comment</label>
                    <input type="text" class="form-control" id="new-comment" />
                    <button type="submit" class="btn btn-primary mt-2">Submit</button>
                  </div>
                </form>
              </div>
              <% for (let comment of comments) { %>
              <div class="card mb-2">
                <div class="card-body">
                  <p class="card-text"><%= comment.comment_text %></p>
                  <div class="card-footer text-muted">
                    <p>
                      <%= comment.user %> <%= new Date(comment.comment_date).toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                    </p>
                  </div>
                </div>
              </div>
              <% } %>
            </div>
        </div>
      </div>
    </div>
  </div>
  </body>
</html>
