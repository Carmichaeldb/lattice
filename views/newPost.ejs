<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/_head') %>
    <style>
        .form-control { 
            width: 100%; /* Full width */
        }
        .card-header {
            text-align: center; /* Center-align the header text */
        }
        .wide-textarea {
            min-height: 150px; /* Larger height for description */
        }
    </style>
</head>

<body>
    <%- include('nav') %>

    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                Create New Post
            </div>
            <div class="card-body">
                <form method="POST" action="/users/new">
                    <!-- Include Tag Input Partial -->
                    <%- include('./partials/_tagInput') %>

                    <div class="form-group mb-3">
                        <input class="form-control" type="text" name="title" placeholder="Title">
                        <label for="title">Title</label>
                    </div>
                    <div class="form-group mb-3">
                        <input type="text" class="form-control" name="topic" id="topic" placeholder="Topic">
                        <label for="topic">Topic</label>
                    </div>
                    <div class="form-group mb-3">
                        <input type="text" class="form-control" name="url" id="url" placeholder="Url">
                        <label for="url">Url</label>
                    </div>
                    <div class="form-group mb-3">
                        <textarea class="form-control wide-textarea" name="description" id="description" placeholder="Description"></textarea>
                        <label for="description">Description</label>
                    </div>
                    <div class="form-group mb-3">
                        <input type="text" class="form-control" name="author" id="author" placeholder="Author">
                        <label for="author">Author</label>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</body>

</html>
