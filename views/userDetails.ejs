<!-- to create new post by the user -->
<!DOCTYPE html>
<html lang="en">

<%- include('./partials/_head') %>
  <%- include('nav') %>

    <body>
      <div class="container">
        <div class="row mt-3">
          <div class="col-md-4 text-center">
            <img src="../images/user<%=user.id%>.png" alt="userImage" class="rounded-circle" width="200" height="200">
            <h3 class="mt-3">
              <%= user.username %>
            </h3>
            <button class="btn btn-primary mt-3" type="button" data-bs-toggle="collapse"
              data-bs-target="#editProfileForm" aria-expanded="false" aria-controls="editProfileForm">
              Edit
            </button>
          </div>
          <div class="col-md-8">
            <div class="collapse mb-3 collapse-horizontal" id="editProfileForm">
              <form method="POST" action="/users/:userid">
                <div class="container">
                  <div class="row">
                    <div class="col-md-8">
                      <div class="form-floating mb-3">
                        <input class="form-control" type="text" name="username" placeholder="Username">
                        <label for="Username">Username</label>
                      </div>
                      <div class="form-floating mb-3">
                        <input type="text" class="form-control" name="email" id="email" placeholder="Email">
                        <label for="email">Email</label>
                      </div>
                      <div class="form-floating mb-3">
                        <input type="text" class="form-control" name="password" id="password" placeholder="Password">
                        <label for="password">Password</label>
                      </div>
                      <div class="form-floating mb-3">
                        <input type="text" class="form-control" name="firstName" id="firstName"
                          placeholder="First name">
                        <label for="firstName">First name</label>
                      </div>
                      <div class="form-floating mb-3">
                        <input type="text" class="form-control" name="lastName" id="lastName" placeholder="Last name">
                        <label for="lastName">Last name</label>
                      </div>
                    </div>
                    <div class="col-md-4 d-flex align-items-end justify-content-end">
                      <button type="submit" data-bs-toggle="collapse" class="btn btn-primary">Save</button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>

      <div class="container m-3 ">
        <div class="container d-flex ml-4 justify-content-left align-items-center mb-2" id="post-tab" role="tablist">
          <div class="d-flex flex-row gap-3 ">
            <div class="col "> <button class="btn active" id="user-posts-tab" data-bs-toggle="tab"
                data-bs-target="#user-posts" type="button" role="tab" aria-controls="user-posts"
                aria-selected="true">Created</button>
            </div>
            <div class="col ">
              <button class="btn" id="liked-posts-tab" data-bs-toggle="tab" data-bs-target="#liked-posts" type="button"
                role="tab" aria-controls="liked-posts" aria-selected="false">Liked</button>
            </div>
          </div>
        </div>
        <hr class="faded-divider">
      </div>

      <div class="tab-content " id="post-tabContent">
        <div class="tab-pane fade show active" id="user-posts" role="tabpanel" aria-labelledby="user-posts-tab"
          tabindex="0">
          <section class="createdPosts">
            <div class="d-flex flex-wrap container">
              <% for (let post of posts) { %>
                <%- include('./partials/_post', {post: post}) %>
                  <% } %>
            </div>
          </section>
        </div>
        <div class="tab-pane fade" id="liked-posts" role="tabpanel" aria-labelledby="liked-posts-tab" tabindex="0">
          <section class="likedPosts">
            <div class="d-flex flex-wrap container">
              <% for (let post of posts1) { %>
                <%- include('./partials/_post', {post: post}) %>
                  <% } %>
            </div>
          </section>
        </div>
      </div>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    </body>
  <%- include('./partials/_footer') %>
</html>